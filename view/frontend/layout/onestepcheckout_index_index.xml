<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="DPDBenelux_Shipping/css/parcelshop.css" />
    </head>
    <body>
        <referenceBlock name="head.additional">
            <block class="DPDBenelux\Shipping\Block\GoogleMaps" name="dpd.googlemaps.api" template="DPDBenelux_Shipping::checkout/shipping/googlemaps.phtml"/>
        </referenceBlock>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="shippingMethod" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="maps" xsi:type="array">
                                            <item name="component" xsi:type="string">DPDBenelux_Shipping/js/view/onestepcheckout/shipping/parcelshop</item>
                                            <item name="displayArea" xsi:type="string">maps</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>